<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>These are your characters:</p>
{{#if characters}}
  <table class="striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each characters}}
        <tr>
          <td>
            <a href="/characters/{{_id}}">{{name}}</a>
          </td>
          <td>{{formatDate createdAt "Do MMMM YYYY, h:mm:ss a"}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not created any characters</p>
{{/if}}